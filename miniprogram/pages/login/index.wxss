.page {
  min-height: 100vh;
  padding: 24rpx;
  background: #f5f6f8;
  box-sizing: border-box;
}

.card {
  background: #ffffff;
  border-radius: 18rpx;
  padding: 32rpx;
  box-shadow: 0 16rpx 32rpx rgba(15, 23, 42, 0.08);
}

.header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.logo {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #2563eb, #4f46e5);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  box-shadow: 0 12rpx 20rpx rgba(37, 99, 235, 0.25);
}

.title {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
}

.desc {
  margin-top: 4rpx;
  font-size: 26rpx;
  color: #475569;
}

.field {
  margin-bottom: 26rpx;
}

.label {
  font-size: 24rpx;
  color: #1f2937;
  margin-bottom: 10rpx;
  font-weight: 600;
}

.input {
  width: 100%;
  padding: 26rpx 28rpx;
  height: 88rpx;
  line-height: 36rpx;
  border-radius: 14rpx;
  background: #f8fafc;
  border: 1rpx solid #e2e8f0;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #0f172a;
}

.password-row {
  position: relative;
  display: flex;
  align-items: center;
}

.password-row .input {
  flex: 1;
  padding-right: 72rpx;
}

.eye {
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #64748b;
}

.error {
  margin: 4rpx 0 20rpx;
  font-size: 24rpx;
  color: #ef4444;
}

.primary {
  width: 100%;
  border-radius: 14rpx;
  background: linear-gradient(135deg, #22c55e, #16a34a);
  color: #fff;
  font-size: 30rpx;
  font-weight: 700;
  border: none;
  padding: 18rpx 0;
  box-shadow: 0 12rpx 20rpx rgba(34, 197, 94, 0.25);
}

.primary[disabled] {
  opacity: 0.6;
  background: #9ca3af;
  box-shadow: none;
}
