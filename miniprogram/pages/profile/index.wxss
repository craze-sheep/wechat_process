.page {
  min-height: 100vh;
  background: #f5f7fb;
  padding: 24rpx;
  box-sizing: border-box;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.05);
}

.header-card {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #2563eb, #4f46e5);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 700;
}

.info .name {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
}

.info .meta {
  margin-top: 6rpx;
  font-size: 26rpx;
  color: #475569;
}

.actions-card {
  margin-top: 12rpx;
}

.logout-btn {
  width: 100%;
  background: linear-gradient(135deg, #ef4444, #dc2626);
  color: #fff;
  border: none;
  border-radius: 14rpx;
  padding: 18rpx 0;
  font-size: 30rpx;
  font-weight: 700;
  box-shadow: 0 12rpx 20rpx rgba(239, 68, 68, 0.25);
}
