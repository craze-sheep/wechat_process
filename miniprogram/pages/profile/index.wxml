<view class="page">
  <view class="card header-card">
    <view class="avatar">{{(profile && profile.name && profile.name[0]) || '用户'}}</view>
    <view class="info">
      <view class="name">{{(profile && (profile.name || profile.username)) || '未登录'}}</view>
      <view class="meta">角色：{{role || '未识别'}} </view>
    </view>
  </view>

  <view class="card actions-card">
    <button class="logout-btn" bindtap="handleLogout">退出登录</button>
  </view>
</view>
