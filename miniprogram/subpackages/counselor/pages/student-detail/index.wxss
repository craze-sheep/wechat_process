.page {
  padding: 24rpx;
}

.section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.item {
  font-size: 26rpx;
  color: #4b5563;
  margin-bottom: 6rpx;
}

.stats-row {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12rpx;
}

.stats-item {
  background: #f3f4f6;
  padding: 16rpx;
  border-radius: var(--radius-md);
}

.label {
  font-size: 22rpx;
  color: #6b7280;
}

.value {
  font-size: 30rpx;
  font-weight: 600;
}

.value.warn {
  color: #dc2626;
}

.timeline {
  padding: 16rpx 0;
  border-bottom: 1px solid #f3f4f6;
}

.timeline:last-child {
  border-bottom: none;
}

.time {
  font-size: 24rpx;
  color: #6b7280;
}

.content {
  font-size: 26rpx;
  margin: 4rpx 0;
}

.owner {
  font-size: 24rpx;
  color: #6b7280;
}

.followup-input {
  width: 100%;
  background: #f9fafb;
  border-radius: var(--radius-md);
  padding: 16rpx;
  min-height: 140rpx;
  margin-bottom: 12rpx;
}
