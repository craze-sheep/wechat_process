.page {
  padding: 24rpx;
}

.card {
  margin-bottom: 20rpx;
}

.filters {
  display: flex;
  gap: 16rpx;
}

.filters .picker {
  flex: 1;
  background: #f3f4f6;
  padding: 18rpx;
  border-radius: 14rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.student {
  font-size: 32rpx;
  font-weight: 600;
}

.status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
}

.status.pending {
  background: rgba(251, 191, 36, 0.2);
  color: #92400e;
}

.status.approved {
  background: rgba(34, 197, 94, 0.2);
  color: #166534;
}

.status.rejected {
  background: rgba(248, 113, 113, 0.2);
  color: #b91c1c;
}

.course {
  margin: 12rpx 0;
  font-size: 28rpx;
}

.reason,
.time {
  color: #6b7280;
  margin-bottom: 8rpx;
}

.actions {
  display: flex;
  justify-content: flex-end;
  gap: 12rpx;
}

.empty {
  padding: 60rpx 0;
  text-align: center;
  color: #9ca3af;
}

.detail-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
}

.detail-panel {
  width: 80%;
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
}

.detail-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.detail-row {
  font-size: 26rpx;
  margin-bottom: 8rpx;
  color: #4b5563;
}
