.page {
  padding: 24rpx;
}

.filter {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.filter .picker {
  background: #f3f4f6;
  padding: 16rpx;
  border-radius: 14rpx;
  font-size: 24rpx;
}

.filter input {
  flex: 1;
  padding: 18rpx;
  border-radius: 14rpx;
  background: #f3f4f6;
}

.stats-card {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.stat {
  background: #f8fafc;
  border-radius: 16rpx;
  padding: 16rpx;
  text-align: center;
}

.stat .label {
  color: #9ca3af;
  font-size: 22rpx;
}

.stat .value {
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 8rpx;
}

.course {
  margin-bottom: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.name {
  font-size: 32rpx;
  font-weight: 600;
}

.clazz {
  color: #6b7280;
  font-size: 24rpx;
  margin-top: 4rpx;
}

.meta {
  color: #9ca3af;
  margin-bottom: 8rpx;
  font-size: 22rpx;
}

.rate {
  font-size: 30rpx;
  color: #2c7cf1;
}

.footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.location {
  color: #6b7280;
  font-size: 24rpx;
}

.actions button {
  margin-left: 12rpx;
}
