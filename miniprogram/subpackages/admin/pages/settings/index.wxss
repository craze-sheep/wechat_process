.page {
  padding: 24rpx;
}

.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12rpx;
}

.cell {
  background: #f3f4f6;
  border-radius: var(--radius-md);
  padding: 20rpx;
}

.label {
  font-size: 22rpx;
  color: #6b7280;
}

.value {
  font-size: 32rpx;
  font-weight: 600;
}

.value.warn {
  color: #dc2626;
}

.section {
  margin-top: 20rpx;
}

.title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.item {
  color: #4b5563;
}

.input,
.textarea {
  margin-top: 12rpx;
  padding: 20rpx;
  background: #f3f4f6;
  border-radius: var(--radius-md);
  font-size: 26rpx;
}

.textarea {
  min-height: 160rpx;
}

.btn {
  margin-top: 16rpx;
}

.log {
  padding: 12rpx 0;
  border-bottom: 1px solid #f3f4f6;
}

.log:last-child {
  border-bottom: none;
}

.content {
  font-size: 26rpx;
}

.meta {
  font-size: 22rpx;
  color: #6b7280;
}

.service-row {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
}

.service-badge {
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
}

.service-badge.normal {
  background: rgba(34, 197, 94, 0.16);
  color: #15803d;
}

.service-badge.warning {
  background: rgba(251, 191, 36, 0.16);
  color: #b45309;
}

.service-badge.error {
  background: rgba(239, 68, 68, 0.16);
  color: #b91c1c;
}
