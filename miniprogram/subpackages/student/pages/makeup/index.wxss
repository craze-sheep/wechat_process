.page {
  padding: 24rpx;
}

.info-card {
  margin-bottom: 20rpx;
}

.info-card .title {
  font-size: 32rpx;
  font-weight: 600;
}

.info-card .meta {
  color: #6b7280;
  margin-top: 8rpx;
}

.form-card {
  margin-bottom: 24rpx;
}

.field {
  margin-bottom: 24rpx;
}

.label {
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.type-group {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.type-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 12rpx;
  background: #f3f4f6;
  border-radius: 12rpx;
  font-size: 24rpx;
}

textarea {
  width: 100%;
  min-height: 160rpx;
  border: 1px solid #e5e7eb;
  border-radius: 12rpx;
  padding: 16rpx;
}

.word-count {
  margin-top: 8rpx;
  text-align: right;
  color: #9ca3af;
  font-size: 22rpx;
}

.upload-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.upload-thumb,
.upload-add {
  width: 140rpx;
  height: 140rpx;
  border-radius: 16rpx;
  background: #f3f4f6;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.upload-thumb image {
  width: 100%;
  height: 100%;
  border-radius: inherit;
}

.upload-thumb .remove {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  text-align: center;
  line-height: 36rpx;
}

.upload-add .plus {
  font-size: 40rpx;
}

.upload-add .desc {
  font-size: 22rpx;
  color: #6b7280;
}

.record {
  margin-bottom: 20rpx;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.course {
  font-size: 30rpx;
  font-weight: 600;
}

.status {
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
}

.status.pending {
  background: rgba(251, 191, 36, 0.2);
  color: #92400e;
}

.status.approved {
  background: rgba(16, 185, 129, 0.2);
  color: #0f766e;
}

.status.rejected {
  background: rgba(248, 113, 113, 0.2);
  color: #b91c1c;
}

.detail {
  margin-top: 8rpx;
  color: #6b7280;
}

.empty {
  text-align: center;
  color: #9ca3af;
  padding: 60rpx 0;
}
