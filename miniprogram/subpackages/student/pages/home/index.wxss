.page {
  padding: 24rpx;
}

.profile-name {
  font-size: 34rpx;
  font-weight: 600;
}

.profile-desc {
  color: #6b7280;
  margin-top: 8rpx;
}

.switch-role {
  background: #2c7cf1;
  color: #fff;
}

.weekly-card {
  margin: 20rpx 0;
}

.weekly-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.weekly-title {
  font-size: 32rpx;
  font-weight: 600;
}

.weekly-sub {
  color: #6b7280;
  font-size: 24rpx;
  margin-top: 8rpx;
}

.weekly-rate {
  font-size: 40rpx;
  font-weight: 700;
  color: #2563eb;
}

.progress-bar {
  height: 12rpx;
  background: #e5e7eb;
  border-radius: 999rpx;
  margin: 24rpx 0;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  background: linear-gradient(90deg, #2563eb, #22d3ee);
  border-radius: inherit;
}

.weekly-metrics {
  display: flex;
  justify-content: space-between;
}

.metric {
  flex: 1;
  text-align: center;
}

.metric-label {
  color: #6b7280;
  font-size: 24rpx;
}

.metric-value {
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 8rpx;
}

.metric-value.warn {
  color: #b45309;
}

.metric-value.danger {
  color: #b91c1c;
}

.quick-card {
  margin-bottom: 24rpx;
}

.quick-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.quick-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12rpx;
}

.quick-item {
  padding: 24rpx 0;
  border-radius: 16rpx;
  background: #f3f4f6;
  text-align: center;
}

.quick-icon {
  font-size: 40rpx;
}

.quick-label {
  font-size: 24rpx;
  margin-top: 8rpx;
}

.course {
  margin-bottom: 24rpx;
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.course-title {
  font-size: 32rpx;
  font-weight: 600;
}

.course-meta {
  color: #6b7280;
  font-size: 24rpx;
  margin: 12rpx 0;
}

.course-footer {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #4b5563;
}

.tag {
  color: #2563eb;
}

.status {
  padding: 4rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
}

.status.ongoing {
  background: rgba(44, 124, 241, 0.1);
  color: #2563eb;
}

.status.upcoming {
  background: rgba(156, 163, 175, 0.18);
  color: #4b5563;
}

.status.remind {
  background: rgba(251, 191, 36, 0.3);
  color: #92400e;
}

.status.completed {
  background: rgba(107, 114, 128, 0.12);
  color: #4b5563;
}

.reminder {
  padding: 20rpx;
  border-radius: var(--radius-md);
  margin-bottom: 16rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.reminder .dot {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: currentColor;
}

.reminder.info {
  background: rgba(44, 124, 241, 0.08);
  color: #1d4ed8;
}

.reminder.warning {
  background: rgba(244, 88, 34, 0.08);
  color: #b91c1c;
}

.actions {
  margin-top: 20rpx;
  display: flex;
  gap: 16rpx;
}

.actions button {
  flex: 1;
}
