.page {
  padding: 24rpx;
}

.filter {
  display: flex;
  justify-content: space-between;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.filter .picker {
  background: #f3f4f6;
  padding: 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
}

.record {
  margin-bottom: 20rpx;
}

.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.course {
  font-size: 30rpx;
  font-weight: 600;
}

.meta {
  margin-top: 12rpx;
  color: #6b7280;
  font-size: 24rpx;
}

.status {
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
}

.status.normal {
  background: rgba(34, 197, 94, 0.15);
  color: #15803d;
}

.status.late {
  background: rgba(251, 191, 36, 0.2);
  color: #92400e;
}

.status.absent {
  background: rgba(248, 113, 113, 0.2);
  color: #b91c1c;
}

.status.makeup {
  background: rgba(59, 130, 246, 0.2);
  color: #1d4ed8;
}

.actions {
  margin-top: 16rpx;
  display: flex;
  gap: 12rpx;
}

.actions button {
  flex: 1;
}

.empty {
  padding: 60rpx 0;
  text-align: center;
  color: #9ca3af;
}

.summary-card {
  margin-top: 16rpx;
}

.summary-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.summary-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12rpx;
}

.summary-grid .label {
  color: #9ca3af;
  font-size: 22rpx;
}

.summary-grid .value {
  font-size: 32rpx;
  font-weight: 600;
}

.summary-grid .value.warn {
  color: #b45309;
}

.summary-grid .value.danger {
  color: #b91c1c;
}
