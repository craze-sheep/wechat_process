:root {
  --color-primary: #2c7cf1;
  --color-warning: #ffb020;
  --color-danger: #f24822;
  --color-bg: #f5f6f8;
  --color-text: #1f2329;
  --radius-lg: 24rpx;
  --radius-md: 16rpx;
}

page {
  background: var(--color-bg);
  font-family: "PingFang SC", "Helvetica Neue", Arial, sans-serif;
  color: var(--color-text);
}

.page-section {
  padding: 32rpx;
}

.card {
  background: #fff;
  border-radius: var(--radius-lg);
  box-shadow: 0 16rpx 32rpx rgba(17, 24, 39, 0.06);
  padding: 24rpx 32rpx;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
